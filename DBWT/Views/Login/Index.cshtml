@using DBWT.Models
@model DBWT.Models.Login

@{
    ViewBag.Name = "Login";
    ViewBag.Title = "e-Mensa - Login";
    ViewBag.Description = "Die Login-Seite der beliebten E-Mensa der FH Aachen.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Login-Seite </h2>
<div class="row topElement20 bottomElement">
    <div class="col-3">
    </div>
    <div class="col-6">
        @{
            if ((Model.verified || Model.signedIn) && !Model.signout)
            {
                <div>
                    <p class="true">Hallo @Session["user"].ToString(), Sie sind angemeldet als @Session["role"].ToString().</p>
                </div>
                <form method="post" action="Login">
                    <input type="text" hidden name="signout" value="1" />
                    <label for="abmeldenB" class="sr-only">Abmelde-Button</label>
                    <button id="anmeldenB" type="submit" class="btn btn-primary buttonCenter buttonColor topElement20 fontawesome-circle-arrow-right"> Abmelden</button>
                </form>
            }
            else if ((!string.IsNullOrEmpty(Model.user) || !string.IsNullOrEmpty(Model.password)) && !Model.verified && !Model.signedIn)
            {
                <p class="false">Login fehlgeschlagen.</p>
                <form method="post" action="Login">
                    <div class="row">
                        <div class="col-3">

                        </div>
                        <div class="col-6">
                            <label class="sr-only" for="benutzer">Benutzername</label>
                            <input id="benutzer" placeholder="Benutzername" name="user" required class="form-control">
                        </div>
                    </div>
                    <div class="row topElement">
                        <div class="col-3">

                        </div>
                        <div class="col-6">
                            <label class="sr-only" for="passwd">Passwort</label>
                            <input type="password" id="passwd" placeholder="Passwort" name="password" required class="form-control">
                        </div>
                    </div>
                    <label for="anmeldenB" class="sr-only ">Anmelde-Button</label>
                    <button id="anmeldenB" type="submit" class="btn btn-primary buttonCenter buttonColor topElement20 fontawesome-circle-arrow-right"> Anmelden</button>
                </form>
            }
            else
            {
                <p>Anmeldung</p>
                <form method="post" action="Login">
                    <div class="row">
                        <div class="col-3">

                        </div>
                        <div class="col-6">
                            <label class="sr-only" for="benutzer">Benutzername</label>
                            <input id="benutzer" placeholder="Benutzername" name="user" required class="form-control">
                        </div>
                    </div>
                    <div class="row topElement">
                        <div class="col-3">

                        </div>
                        <div class="col-6">
                            <label class="sr-only" for="passwd">Passwort</label>
                            <input type="password" id="passwd" placeholder="Passwort" name="password" required class="form-control">
                        </div>
                    </div>
                    <label for="anmeldenB" class="sr-only ">Anmelde-Button</label>
                    <button id="anmeldenB" type="submit" class="btn btn-primary buttonCenter buttonColor topElement20 fontawesome-circle-arrow-right"> Anmelden</button>
                </form>
            }
        }
    </div>
    <div class="col-3">
    </div>
</div>